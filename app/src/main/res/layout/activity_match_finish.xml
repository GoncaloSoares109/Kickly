<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ManageActivities.ManageTournamentsActivities.ManageTournamentActivities.ManageTournamentMatchesActivities.MatchFinish"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="32dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imgTeam1Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/paypal"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/tvTeam1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="8dp"
                        android:text="@string/team_name"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/onSurface"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="9"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imgTeam2Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/paypal"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/tvTeam2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:paddingHorizontal="8dp"
                        android:text="@string/team_name"
                        android:textAlignment="center"
                        android:textColor="@color/onSurface"
                        android:textSize="12sp"
                        tools:ignore="RtlCompat"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1Score"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/score"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2Score"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1TotalAttempts"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/total_attempts"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2TotalAttempts"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1AttemptsOnTarget"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/attempts_on_target"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2AttemptsOnTarget"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1FoulsCommited"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/fouls_commited"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2FoulsCommited"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1YellowCards"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/yellow_cards"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2YellowCards"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1RedCards"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/red_cards"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2RedCards"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1Offsides"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/offsides"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2Offsides"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1Corners"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/corners"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/editText_Team2Corners"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/background"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/editText_Team1Possession"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:textColorHint="@color/onBackground2"
                    android:textColor="@color/onBackground"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corners_background"
                    android:backgroundTint="@color/surface"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="@string/possessionPercent"
                    android:textColor="@color/onBackground"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/textView_Team2Possession"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="auto"
                    android:textColor="@color/onBackground2"
                    android:layout_marginVertical="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/rounded_corners_background"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/finish"
                android:textColor="@color/onPrimary"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>